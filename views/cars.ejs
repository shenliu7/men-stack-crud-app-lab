<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dream Cars</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <h1>Dream Cars</h1>
  </header>
  <div class="container">
    <a href="/cars/new">Add New Car</a>
    <ul>
      <% cars.forEach(car => { %>
        <li>
          <h2><%= car.year %><%= car.make %> <%= car.model %></h2>
          <div class="ui">
            <a href="/cars/<%= car._id %>/edit"><button>Edit</button></a>
            <form action="/cars/<%= car._id %>/delete" method="POST" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>

